          <div class="form-headers">Do you have a bank account?</div>
            <div class="form-check form-check-inline radios">
              <label class="form-check-label" for="inlineCheckbox1" ><abbr class="emoji">ğŸ¦</abbr> Yes</label>
              <input class="form-check-input" type="radio" id="inlineCheckbox1" value="Yes" name="content[bank_account]">
            </div>
            <div class="form-check form-check-inline radios">
              <label class="form-check-label" for="inlineCheckbox2"><abbr class="emoji">ğŸš«</abbr> No</label>
               <input class="form-check-input" type="radio" id="inlineCheckbox2" value="No" name="content[bank_account]">
            </div>
        </div>
            <div class="p-3 mb-0.5">
              <%= f.input :content, as: :text,:input_html => {:rows => 5}, label:  "What are you willing to change?" %>
            </div>
            <div class="d-flex justify-content-center">
              <%= f.submit 'Submit',  class: 'btn btn-danger btn-md btn-form' %>
        </div>

    <% end %>

